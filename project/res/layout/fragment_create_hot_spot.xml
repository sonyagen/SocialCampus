    <!-- place: hedline and value -->
    <RelativeLayout
        android:layout_width="wrap_content"
	    android:layout_height="wrap_content"
	    android:layout_marginBottom="20dp" >
		<TextView 
		    android:id="@+id/placeHead"
	        android:layout_width="wrap_content"
	    	android:layout_height="wrap_content" 
	    	android:text="where:"
	    	android:textSize="14sp"
	    	android:textColor="@drawable/SkyBlue"
	    	android:layout_centerVertical="true"	/>
		<EditText 
		    android:id="@+id/place"
	        android:layout_width="match_parent"
	    	android:layout_height="wrap_content" 
	    	android:hint="Choose a place..."
	    	android:textColor="#5A5A5A"	
	    	android:textSize="18sp"
	    	android:layout_marginLeft="5dp"
	    	android:layout_toRightOf="@+id/placeHead"
	    	android:layout_centerVertical="true"	/>
	</RelativeLayout>
	
	<fragment 
		android:id="@+id/My_map"
	  	android:layout_width="match_parent"
	 	android:layout_height="120dp"
	  	class="com.google.android.gms.maps.SupportMapFragment"
	  	android:layout_marginBottom="20dp" />
	

	
	<RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:visibility="gone" >
        
	    <TextView 
	        android:id="@+id/going"
		    android:layout_width="wrap_content"
		 	android:layout_height="wrap_content"
		 	android:text="Going:"
		 	android:textSize="14sp"
	    	android:textColor="@drawable/SkyBlue" 
	    	android:layout_centerVertical="true" 		/>
	     
        <ImageView
            android:id="@+id/usr1"
            android:layout_width="50dp"
            android:layout_height="50dp"
            android:layout_toRightOf="@id/going"
            android:layout_marginLeft="20dp"
            android:src="@drawable/profie_anonymous"
            android:layout_centerVertical="true"  />

        <ImageView
            android:id="@+id/usr2"
            android:layout_width="50dp"
            android:layout_height="50dp"
            android:layout_toRightOf="@+id/usr1"
            android:layout_marginLeft="3dp"
            android:src="@drawable/profie_anonymous"
            android:layout_centerVertical="true"  />

        <ImageView
            android:id="@+id/usr3"
            android:layout_width="50dp"
            android:layout_height="50dp"
            android:layout_alignParentTop="true"
            android:layout_toRightOf="@+id/usr2"
            android:layout_marginLeft="3dp"
            android:src="@drawable/profie_anonymous"
            android:layout_centerVertical="true"  />  
            
        
    </RelativeLayout>
    
	</LinearLayout>
</ScrollView>    
</LinearLayout>

    
    
    
    

