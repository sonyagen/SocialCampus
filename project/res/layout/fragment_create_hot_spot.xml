<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".CreateHotSpotFragment"
    android:background="#F6F6F6"
     android:orientation="vertical" 
     android:padding="20dp">


    <RelativeLayout
	    android:layout_width="match_parent"
	    android:layout_height="wrap_content"
	    tools:context=".InfoBoxFragment" 
	    android:id="@+id/infoBox" 
	    android:layout_marginBottom="20dp" >

	 	<ImageButton
		    android:id="@+id/image"
	        android:layout_width="120dp"
	    	android:layout_height="80dp" 
	    	android:src="@drawable/wave"
	    	android:layout_marginRight="10dp"
	    	android:layout_marginBottom="10dp"	/>
		
		<EditText 
		    android:id="@+id/name"
	        android:layout_width="wrap_content"
	    	android:layout_height="wrap_content" 
	    	android:hint="Choose a headline..."
	    	android:layout_toRightOf="@+id/image"
	    	android:layout_alignTop="@+id/image"
	    	android:textColor="#373737"	
	    	android:textSize="16sp"
	    	android:layout_marginBottom="7dp"	/>
		
		<TextView 
		    android:id="@+id/timeStr"
	        android:layout_width="wrap_content"
	    	android:layout_height="wrap_content" 
	    	android:text="this is time"
	    	android:layout_toRightOf="@+id/image"
	  		android:layout_below="@+id/name"
	    	android:textColor="#5A5A5A"		/>
		
		<TextView 
		    android:id="@+id/place"
	        android:layout_width="wrap_content"
	    	android:layout_height="wrap_content" 
	    	android:hint="Choose the place..."
	    	android:layout_toRightOf="@+id/image"
	  		android:layout_below="@+id/timeStr"
	    	android:textColor="#5A5A5A"		/>
		
	</RelativeLayout>

	<fragment 
		android:id="@+id/map"
	  	android:layout_width="match_parent"
	 	android:layout_height="120dp"
	  	class="com.google.android.gms.maps.SupportMapFragment"
	  	android:layout_marginBottom="20dp" />
	
	<TextView 
	    android:layout_width="match_parent"
	 	android:layout_height="wrap_content"
	 	android:text="Going:" 		/>
	
	<LinearLayout 
	    android:id="@+id/GoingImgList"
	    android:layout_width="match_parent"
	    android:layout_height="wrap_content"
	    android:orientation="horizontal" 	/>

</LinearLayout>
    
    
    
    
    

